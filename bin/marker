#!/bin/csh
# Change the prompt color marker to distinguish between terminals

if ($#argv != 1) then
	echo "Error: You must give exactly 1 arguments"
	echo "Usage: marker [red | green | yellow | blue | magenta | cyan | none ]"
	echo " "
else
	switch ("$argv[1]")
		case red :
			set color="1;31m"
			breaksw
		
		case green :
			set color="1;32m"
			breaksw

		case yellow :
			set color="1;33m"
			breaksw

		case blue :
			set color="1;34m"
			breaksw
		
		case magenta :
			set color="1;35m"			
			breaksw

		case cyan :
			set color="1;36m"
			breaksw
		
		case none :
			set color="0;37m"			
			breaksw

		default :
			echo "Error: Arguments not valid"
			echo "Usage: markers [red | green | yellow | blue | magenta | cyan | none | cheatsheet]"
			echo " "
			exit

	endsw
  
	set prompt="%~ %{\e[${color}%}%#%{\e[0m%} "
	unset color

endif

