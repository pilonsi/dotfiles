#!/bin/sh

help_message () {
  printf 'Sync local dirs with tyto\n\n'
  printf 'Usage: syncwtyto [-m -s -t -o]\n'
	printf '  -m: Sync music\n'
	printf '  -s: Sync src\n'
	printf '  -t: Sync text\n'
	printf '  -o: Sync tools\n'
}

rsync_cmd="rsync -atuPhz --delete"

# Show help message if no arguments
if [ $# -eq 0 ]; then
	help_message
	exit 1
fi

# Get positional arguments
while :; do
  case $1 in
    -m)
			$rsync_cmd ~/Music/Biblioteca/ tyto.despatxet.local:/tank/pilonsi/audio/music/
			$rsync_cmd ~/Music/beets/ tyto.despatxet.local:/tank/pilonsi/audio/beets/
      ;;
    -s)
			$rsync_cmd ~/src/ tyto.despatxet.local:/tank/pilonsi/src/
      ;;
    -t)
			$rsync_cmd ~/text/ tyto.despatxet.local:/tank/pilonsi/text/
      ;;
    -o)
			$rsync_cmd ~/tools/ tyto.despatxet.local:/tank/pilonsi/tools/
      ;;
    -b)
			$rsync_cmd ~/books/ tyto.despatxet.local:/tank/pilonsi/books/
      ;;
    -p)
			$rsync_cmd ~/personal/ tyto.despatxet.local:/tank/pilonsi/personal/
      ;;
    -w)
			$rsync_cmd ~/work/ tyto.despatxet.local:/tank/pilonsi/work/
      ;;
    *)
      break
  esac
  shift
done
